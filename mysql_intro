CRUD Opertaions 

create ==> INSERT 
read  ==> SELECT 
update  ==> UPDATE 
delete ==> DELETE 


-- create 
CREATE TABLE traineedb.durgendra_data
(
  rollno INT ,
  NAME VARCHAR(20) 
) ; 

-- read 
SELECT * FROM traineedb.durgendra_data ; 
SELECT rollno,NAME FROM traineedb.durgendra_data WHERE rollno=2; 


-- create 

INSERT INTO traineedb.durgendra_data(rollno,NAME) VALUES ( 1 , 'mohan') ;
INSERT INTO traineedb.durgendra_data(rollno,NAME) VALUES ( 2 , 'dk') ;
INSERT INTO traineedb.durgendra_data(rollno,NAME) VALUES ( 3 , 'ajay') ;
INSERT INTO traineedb.durgendra_data(rollno,NAME) VALUES (1,'ravi') ;

-- update 

UPDATE traineedb.durgendra_data SET NAME='mohan chand' WHERE NAME='mohan' ;
UPDATE traineedb.durgendra_data SET NAME='mohan chand' WHERE rollno=1  ;
UPDATE traineedb.durgendra_data SET NAME='mohan chand' ; 

--DELETE 

DELETE FROM traineedb.durgendra_data WHERE rollno = 2 ; 

